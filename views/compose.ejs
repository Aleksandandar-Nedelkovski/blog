<%- include ./partials/header %>

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" id="exampleFormControlInput1" type="text" name="postTitle">
    </div>
    <div class="form-group">
        <label>Message</label>
        <textarea class="form-control" name="postBody" rows="3"></textarea>
    </div>
    <button class="btn btn-primary form-control" name="publish" type="submit">Publish</button>
</form>

